<Window x:Class="Lair.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				Title="Welcome to your Lair, Overlord"
				Height="850">
	<x:Code>public MainWindow(){InitializeComponent();}</x:Code>
	<DockPanel>
		<ToolBar DockPanel.Dock="Top">
			<Button Command="{Binding Path=Open}">Open</Button>
			<Button Command="{Binding Path=Save}">Save</Button>
			<Button Command="{Binding Path=FormatAll}">Format All</Button>
		</ToolBar>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="2*" />
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<TextBox Grid.Column="0" Text="{Binding Path=Code, Mode=TwoWay}" FontFamily="Palatino Linotype, Serif" FontSize="16" />
			<GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" ShowsPreview="True" Width="3" />
			<TextBox Grid.Column="2" Text="{Binding Path=Errors, Mode=TwoWay}" />
		</Grid>
	</DockPanel>
</Window>